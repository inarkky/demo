{% extends "layout.jinja2" %}

{% block pagestyles %}
  <link href="{{ url_for('static', filename='dist/css/landing.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
  <div class="form-wrapper">

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1>New transaction</h1>

    <form method="POST" action="/transaction/new">
      {{ form.csrf_token }}

      <fieldset class="date">
        {{ form.date.label }}
        {{ form.date(placeholder='01/01/2020') }}
        {% if form.date.errors %}
          <ul class="errors">
            {% for error in form.date.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="form-field">{{ form.type.label }} {{ form.type }}
            <i class="fas fa-caret-down"></i>
            {% if form.type.errors %}
              <ul class="errors">
                {% for error in form.type.errors %}
                  <li class="error">
                      <i class="fas fa-exclamation"></i> <span class="error-message">{{ error }}</span>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </fieldset>

      <fieldset class="currency">
        {{ form.currency.label }}
        {{ form.currency(placeholder='HRK') }}
        {% if form.currency.errors %}
          <ul class="errors">
            {% for error in form.currency.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="total">
        {{ form.total.label }}
        {{ form.total(placeholder='500.00') }}
        {% if form.total.errors %}
          <ul class="errors">
            {% for error in form.total.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <fieldset class="note">
        {{ form.note.label }}
        {{ form.note(placeholder='Reason for transaction') }}
        {% if form.note.errors %}
          <ul class="errors">
            {% for error in form.note.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
      </fieldset>

      <div class="submit-button">
        {{ form.submit }}
      </div>

    </form>

  </div>
{% endblock %}