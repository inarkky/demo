<!DOCTYPE html>
<html lang="en">

<head>
  {% include 'meta.jinja2' %}
  {% block pagestyles %}{% endblock %}
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,500" rel="stylesheet">
  <link rel="stylesheet" href="https://use.typekit.net/sus7rlu.css">
</head>

<body class="{{template}}">

  {% include "navigation.jinja2" %}


  <div class="grid-row-12">
    {% if current_user.is_authenticated %}
    <div class="grid-col-2">
      {% include "sidebar.jinja2" %}
    </div>
    {% endif %}
    {% if current_user.is_authenticated %}
    <div class="grid-col-7">
    {% else %}
    <div class="grid-col-12">
    {% endif %}
      {% block content %}{% endblock %}
    </div>  
  </div>


  <!-- Scripts -->
  <script src="{{ url_for('static', filename='dist/js/main.min.js') }}"></script>
  {% block scripts %}{% endblock %}
</body>

</html>